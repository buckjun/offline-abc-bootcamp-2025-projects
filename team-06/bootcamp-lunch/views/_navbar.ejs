<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #fff;
    border-bottom: 1px solid #e9ecef;
  }
  .navbar-brand {
    font-size: 1.5rem;
    font-weight: 700;
    color: #4a69bd;
    text-decoration: none;
  }
  .navbar-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .navbar-nav a {
    text-decoration: none;
    color: #495057;
    font-weight: 500;
  }
  .navbar-nav .welcome-msg {
    color: #333;
  }
</style>

<nav class="navbar">
  <a href="/" class="navbar-brand">🚀 부캠런치</a>
  <div class="navbar-nav">
    <% if (user) { %>
      <!-- 로그인 상태일 때 -->
      <span class="welcome-msg"><strong><%= user.name %></strong>님, 환영합니다!</span>
      <a href="/logout">로그아웃</a>
    <% } else { %>
      <!-- 로그아웃 상태일 때 -->
      <a href="/login">로그인</a>
      <a href="/signup">회원가입</a>
    <% } %>
  </div>
</nav>
